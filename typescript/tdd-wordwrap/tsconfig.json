{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es5",
      "module":"commonjs",
      "lib": ["es5", "es2015"],
      "strict": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "noImplicitThis": false,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./dist",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "./src/**/*.ts"
    ]
  }